<p id="notice"><%= notice %></p>

<div id="new_task" class="container">
  <%= link_to 'Add Task', new_task_path, class: "btn btn-primary mb-3", remote: true %>
</div>

<div id="task_edit" class="container">
</div>

<div id="task_show" class="container"></div>

<div id="tasks" class="container">
  <h1>Tasks</h1>

  <table id="task" class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th colspan="3">Opções</th>
      </tr>
    </thead>

    <tbody>
      <%= render @tasks %>
    </tbody>
  </table>
</div>

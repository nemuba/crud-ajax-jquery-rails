<tr id="task_<%= task.id %>">
  <td><%= task.name %></td>
  <td><%= link_to 'Show', task, class: "btn btn-info btn-sm", remote: true %></td>
  <td><%= link_to 'Edit', edit_task_path(task), remote: true, class: "btn btn-success btn-sm" %></td>
  <td><%= link_to 'Destroy', task, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?', remote: true} %></td>
</tr>